<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body class="bg-gray-100">
    <%- include('partials/navbar', { page: '/solutions/projects' }) %>

    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-semibold text-center text-gray-800 mb-6">Projects</h1>

        <!-- Table -->
        <div class="overflow-x-auto">
            <table class="table w-full max-w-4xl mx-auto table-auto border-collapse bg-white shadow-md rounded-lg">
                <thead>
                    <tr class="bg-gray-800 text-white">
                        <th class="px-4 py-3 font-medium">Title</th>
                        <th class="px-4 py-3 font-medium">Sector</th>
                        <th class="px-4 py-3 font-medium">Summary</th>
                        <th class="px-4 py-3 font-medium">Details</th>
                    </tr>
                </thead>
                <tbody>
                    <% projects.forEach(project => { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 text-gray-800"><%= project.title %></td>
                        <td class="px-4 py-3">
                            <a href="/solutions/projects?sector=<%= project.sector %>" class="btn btn-sm btn-primary text-white">
                                <%= project.sector %>
                            </a>
                        </td>
                        <td class="px-4 py-3 text-gray-600"><%= project.summary_short %></td>
                        <td class="px-4 py-3">
                            <a href="/solutions/projects/<%= project.id %>" class="btn btn-sm btn-info text-white">
                                Details
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>
